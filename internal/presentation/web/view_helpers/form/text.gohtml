{{ define "#/form/text" }}
    <label for="{{ .ID }}">{{ .Label }}</label>
    <input type="text"
           id="{{ .ID }}"
           name="{{ .Name }}"
           placeholder="{{ .Placeholder }}"
           {{ if .Value }}value="{{ .Value }}"{{ end }}
           {{ if .Required }}required{{ end }}>
    {{ if .Error }}
        <div class="form-error">
            {{ .Error }}
        </div>
    {{ end }}
{{ end }}
